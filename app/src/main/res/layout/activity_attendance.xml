<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nexteducation.bookdemo.AttendanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/my_attendance_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="40dp"
            android:transitionName="moduleName"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/teacher_image"
            android:text="My Attendance"/>

        <ImageView
            android:id="@+id/teacher_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_banjo"
            android:transitionName="userImage"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Attendance"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="#FFFF00"
                    android:padding="10dp"
                    android:cropToPadding="true"
                    android:tint="@android:color/black"
                    android:src="@android:drawable/ic_menu_add"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mark Attendance"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"/>
                
            </LinearLayout>
            
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="#FFFF00"
                    android:padding="10dp"
                    android:cropToPadding="true"
                    android:tint="@android:color/black"
                    android:src="@android:drawable/ic_menu_add"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mark Attendance"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="#FFFF00"
                    android:padding="10dp"
                    android:cropToPadding="true"
                    android:tint="@android:color/black"
                    android:src="@android:drawable/ic_menu_add"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mark Attendance"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        
    </LinearLayout>

</LinearLayout>
